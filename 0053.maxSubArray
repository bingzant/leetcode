class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int curSum = nums[0], maxSum = nums[0];
        for(int i = 1; i < nums.size(); ++i) {
            if (curSum < 0) {
                curSum = 0;
            }
            curSum += nums[i];
            if (maxSum < curSum) {
                maxSum = curSum;
            }
        }
        return maxSum;
    }
};
